<?xml version="1.0" encoding="utf-8"?>
<resources>
    <integer name="view_list_transition_duration">250</integer>
    <color name="view_list_swipe_text_color">#ffffff</color>
    <color name="view_list_swipe_positive_color">#6db33f</color>
    <color name="view_list_swipe_negative_color">#cf6679</color>
    <declare-styleable name="EasyRecyclerView">
        <attr name="ERV_EmptyLayoutId" format="reference" />
        <attr name="ERV_SupportsRefresh" format="boolean" />
        <attr name="ERV_SupportsLoadMore" format="boolean" />
        <attr name="ERV_LayoutManager" format="enum">
            <enum name="LAYOUT_LINEAR_VERTICAL" value="1" />
            <enum name="LAYOUT_LINEAR_HORIZONTAL" value="2" />
            <enum name="LAYOUT_FLOW" value="3" />
        </attr>
        <attr name="ERV_SwipeNegativeBackgroundColor" format="color" />
        <attr name="ERV_SwipePositiveBackgroundColor" format="color" />
        <attr name="ERV_SwipeUndoTextPhrase" format="string" />
        <attr name="ERV_SwipeIconSize" format="dimension" />
        <attr name="ERV_SwipeTextSize" format="dimension" />
        <attr name="ERV_SwipeTextAndIconColor" format="color" />
        <attr name="ERV_SwipeMode" format="enum">
            <enum name="non_editable" value="1" />
            <enum name="add_remove" value="2" />
            <enum name="enable_disable" value="3" />
        </attr>
    </declare-styleable>
</resources>